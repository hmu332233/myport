<div class="image-container set-full-height" style="background-image: url('assets/img/back2.jpeg')">
	<!--   Creative Tim Branding   -->
	<a href="">
	<div class="logo-container">
		<div class="logo">
			<img src="assets/img/new_logo.png">
		</div>
		<div class="brand arrange_brand">
			 myPORT
		</div>
	</div>
	</a>
	<!--   Big container   -->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<!--      Wizard container        -->
				<div class="wizard-container">
					<div class="card wizard-card" data-color="orange" id="wizardProfile">
						<!--<form action="" method="">-->
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                            <%= devise_error_messages! %>
                            <%= f.hidden_field :reset_password_token %>
							<!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
							<div class="wizard-header mainfont">
								<h3>
								<b>새비밀번호 설정</b><br>
								</h3>
							</div>
							<div class="wizard-navigation">
								<ul>
									<li><a href="#about" data-toggle="tab"></a></li>
								</ul>
							</div>
							<div class="tab-content">
								<div class="tab-pane" id="about">
									<div class="row">
										<h4 class="info-text mainfont"><strong>Enter your new Password</strong></h4>
										<div class="col-sm-10 col-sm-offset-1 mainfont">
											<div class="form-group">
												<label>New Password<small>(required)</small></label>
												<!--<input name="email" type="email" class="form-control" placeholder="">-->
												<% if @minimum_password_length %>
                                                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                                                <% end %>
                                                <%= f.password_field :password, autofocus: true, autocomplete: "off",class: "form-control" %>
											</div>
											<div class="form-group">
												<label>New Password(again)<small>(required)</small></label>
												<!--<input name="email" type="email" class="form-control" placeholder="">-->
												<%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
											</div>
										</div>
									</div>
									<div class="wizard-footer height-wizard">
										<div class="pull-right">
											<!--<form action="/users/password" method="PATCH,PUT">-->
											<!--	<input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm mainfont' name='finish' value='Finish'/>-->
											<!--</form>-->
											<%= f.submit "finish",class: "btn btn-finish btn-fill btn-warning btn-wd btn-sm mainfont" %>
										</div>
										<div class="clearfix">
										</div>
									</div>
								</form>
							</div>
						</div>
						<!-- wizard container -->
					</div>
				</div>
				<!-- end row -->
			</div>
			<!--  big container -->
		</div>
	</div>
</div>
<div class="image-container set-full-height" style="background-image: url('/img/back-image.jpg')">
	<!--   Creative Tim Branding   -->
	<a href="">
	<div class="logo-container">
		<div class="logo">
			<img src="/img/new_logo.png">
		</div>
		<div class="brand arrange_brand">
			 myPORT
		</div>
	</div>
	</a>
	<!--  Made With Get Shit Done Kit  -->
	<!--   Big container   -->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<!--      Wizard container        -->
				<div class="wizard-container">
					<div class="card wizard-card" id="wizardProfile">
					    <!--<form action="" method="">-->
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
							<%= devise_error_messages! %>
							<!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
							<div class="wizard-header mainfont">
								<h3>
								<b>Find Password</b><br>
								</h3>
							</div>
							<div class="wizard-navigation">
								<ul>
									<li><a href="#about" data-toggle="tab"></a></li>
								</ul>
							</div>
							<div class="tab-content">
								<div class="tab-pane" id="about">
									<div class="row">
										<h4 class="info-text mainfont"><strong>Enter yor ID and Email.</strong></h4>
										<div class="col-sm-10 col-sm-offset-1">
											<div class="form-group mainfont">
												<label>ID <small>(required)</small></label>
												<!--<input name="email" type="email" class="form-control" placeholder="HongKilDong123">-->
												<%= f.email_field :id, autofocus: true,class: "form-control" %>
											</div>
										</div>
									</div>
									<div class="row">
										<!--<h4 class="info-text mainfont"><strong>Enter yor Email.</strong></h4>-->
										<div class="col-sm-10 col-sm-offset-1">
											<div class="form-group mainfont">
												<label>Email <small>(required)</small></label>
												<!--<input name="email" type="email" class="form-control" placeholder="BBaem@gmail.com">-->
												<%= f.email_field :email, autofocus: true,class: "form-control" %>
											</div>
										</div>
									</div>
									<div class="wizard-footer height-wizard">
										<div class="mButton gcenter pull-right">
											<!--<a href="#none" class="btn btn-finish btn-fill btn-warning btn-wd btn-sm mainfont "><span>Finish</span></a>-->
                                            <%= f.submit "finish",class: "btn btn-finish btn-fill btn-warning btn-wd btn-sm mainfont" %>										
										</div>
									</div>
								</div>
							</div>
						<!--</form>-->
						<% end %>
					</div>
					<!-- wizard container -->
				</div>
			</div>
			<!-- end row -->
		</div>
		<!--  big container -->
	</div>
</div>
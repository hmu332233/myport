	<!--   Big container   -->
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<!--      Wizard container        -->
				<div class="wizard-container">
					<div class="card wizard-card" id="wizardProfile">
						<!--<form action="" method="">-->
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
							<div class="wizard-header">
								<h3>
								<b>LOGIN</b><br>
								<small></small>
								</h3>
							</div>
							<div class="wizard-navigation">
								<ul>
									<li><a href="#about" data-toggle="tab"></a></li>
								</ul>
							</div>
							<div class="tab-content">
								<div class="tab-pane" id="about">
									<div class="row">
										<!-- <h4 class="info-text"> Let's start with the basic information (with validation)</h4> -->
										<div class="col-sm-2 col-sm-offset-1">
											<div class="picture-container">
												<!-- <div class="picture">
                                              <img src="assets/img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title=""/>
                                              <input type="file" id="wizard-picture">
                                          </div> -->
												<!-- <h6>Ban Sang Min</h6> -->
											</div>
										</div>
										<div class="col-sm-6 tab-padding">
											<div class="form-group arrange_form_group">
												<label>ID</label>
												 <%= f.email_field :email, autofocus: true, class: "form-control" %>
											</div>
											<div class="form-group arrange_form_group">
												<label>PASSWORD</label>
												<!--<input name="lastname" type="text" class="form-control">-->
												<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
											</div>
											<div class="wizard-footer height-wizard">
												<div class="mButton gcenter">
													<!--<a href="#none" class="btn btn-finish btn-fill btn-warning btn-wd btn-sm "><span>Sign in</span></a>-->
													<%= f.submit "Sign in",class: "btn btn-finish btn-fill btn-warning btn-sm " %>
													<!--<a href="/users/sign_up" class="btn btn-finish btn-fill btn-warning btn-wd btn-sm "><span>Sign up</span></a>-->
													<input type="button" value="Sign up" onClick="location.href='/users/sign_up'" class="btn btn-finish btn-fill btn-warning btn-sm mainfont">
												</div>
												<div class="mButton gcenter btn-padding">
													<center><a href="/users/password/new" class=""><span>Did you loss your ID?</span></a></center>
													<center><a href="/users/password/new" class=""><span>Did you loss your Pw?</span></a></center>
												</div>
											</div>
										</div>
										<div class="col-sm-10 col-sm-offset-1">
											<!-- <div class="form-group">
                                          <label>Email <small>(required)</small></label>
                                          <input name="email" type="email" class="form-control" placeholder="andrew@creative-tim.com">
                                      </div> -->
										</div>
									</div>
								</div>
							</div>
						<!--</form>-->
						<% end %>
					</div>
				</div>
				<!-- wizard container -->
			</div>

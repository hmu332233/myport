
<%= form_for @post, url: {controller: "posts",action: "update"} do |f| %>
  <div class="form-group">
    <%= f.label(:title,"title") %>
    <%= f.text_field(:title,class: "form-control") %>
  </div>
  <div class="form-group">
    <%= f.label(:content,"content") %>
    <%= f.text_area( :content,class: "form-control",size: "24x6") %>
  </div>
  <div class="radio">
    <label>
      <%= f.radio_button :scope, '0', checked: (@post.scope == 0) %> 
      개인
    </label>
    <label>
      <%= f.radio_button :scope, '1', checked: (@post.scope == 1) %>
      전체
    </label>
    <label>
      <%= f.radio_button :scope, '2',checked: (@post.scope == 2) %>
      멘토멘티
    </label>
  </div>

  <%= f.submit("전송", class: "btn btn-default") %>
<% end %>